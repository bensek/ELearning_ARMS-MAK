@model EducationSite.Models.User
@{
    ViewBag.Title = "SignUp";
}
<style>
    #register_card{
        margin-left:250px;
        margin-right:250px;
        margin-top:100px;
    }
</style>

<div class="container">
    <div class="card" id="register_card">
        <div class=" card-content black-text">
            <span class="card-title">Sign Up</span>

@using (Html.BeginForm("SignMeUp", "Auth", FormMethod.Post, new { @class = "form" }))
{
    <div class="input-field">
        @Html.LabelFor(m => m.Fullname)
        @Html.TextBoxFor(m => m.Fullname, new { @class = "input-field" })
    </div>
    <div class="input-field">
        @Html.LabelFor(m => m.RegNo)
        @Html.TextBoxFor(m => m.RegNo, new { @class = "input-field" })
    </div>
    <div class="input-field">
        @Html.LabelFor(m => m.Username)
        @Html.TextBoxFor(m => m.Username, new { @class = "input-field" })
    </div>
    <div class="input-field">
        @Html.LabelFor(m => m.Email)
        @Html.TextBoxFor(m => m.Email, new { @class = "input-field" })
    </div>

    <div class="input-field">
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password)
    </div>
    <div class="input-field">
        @Html.LabelFor(m => m.ConfirmPassword)
        @Html.PasswordFor(m => m.ConfirmPassword)
    </div>
    <input type="submit" class="btn" value="REGISTER" />
   }
    </div>
    </div>
    </div>


